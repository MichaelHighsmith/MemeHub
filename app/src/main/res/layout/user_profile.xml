<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listgrad">

    <LinearLayout
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/task_border">

    <TextView
        android:id="@+id/usernameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current User"
        android:layout_gravity="center_horizontal"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/totalScoreTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: "
        android:layout_gravity="center_horizontal"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/pointsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submission Points: 10"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>


    <TextView
        android:id="@+id/swipesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24 Memes Viewed"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/currentStatusTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Status"
        android:textSize="32sp"
        android:paddingTop="108dp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"/>


</LinearLayout>